{
    "name":"Blog generation Chrome Extension",
    "version":"1.0.0",
    "description":"Drafting text generation chrome Extension",
    "manifest_version":3,
    "author":"Suresh",
    "action":{
        "default_popup":"index.html",
        "default_title":"Simple blog generation Chrome Extension"
    },
    "permissions": ["clipboardRead","activeTab","scripting"],
    "host_permissions":["<all_urls>"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content_script.js"]
      }
    ]
 }